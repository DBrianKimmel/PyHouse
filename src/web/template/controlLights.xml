<!-- controlLighta.xml -->
<html   xmlns:nevow = "http://nevow.com/ns/nevow/0.1"
		xmlns = 'http://www.w3.org/1999/xhtml'
		lang = 'en'>
	<head>
		<title>PyHouse Controllers Page</title>
		<link rel = 'stylesheet' type = 'text/css' href = 'mainpage.css' />
		<link rel = 'stylesheet' type = 'text/css' href = 'lightpage.css' />
		<script type = 'text/javascript' src = 'ajax.js' />
		<script type = 'text/javascript' src = 'floating_window.js' />
    </head>
    <body>
    	<h1>PyHouse Controller Selection</h1>
    	<h2>Select the controller to modify:</h2>
    	<form name = 'menuofbuttons' enctype = 'multipart/form-data' method = 'post' >
    				<nevow:attr name = "action"><nevow:invisible nevow:render = 'action' /></nevow:attr>
    		<table style = 'Width: 100%' border = '0'>
    			<tr>
    				<div nevow:data="controllist" nevow:render="controllist" />
    			</tr>
    			<tr>
    				<input type = 'submit' value = 'Cancel' name = 'post_btn' />
    				<input type = 'submit' value = 'Back' name = 'post_btn' />
    			</tr>
    		</table>
    	</form> 
    </body>
</html>

