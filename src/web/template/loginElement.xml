<div 
    xmlns:athena = 'http://divmod.org/ns/athena/0.7'
    xmlns:nevow  = 'http://nevow.com/ns/nevow/0.1'
    nevow:render = 'liveElement'
    >
    <div name = 'LoginElement'>
	    <form name = "LoginForm">
	        <athena:handler event = "onsubmit" handler = "doLogin" />
	        User Name: <input name = "LoginName" /><br></br>
	        Password : <input name = "LoginPassword" type = 'password' /><br></br>
	        <input type = "submit" name = 'LoginSubmit' value = "Login" />
	    </form>
    </div>
</div>
