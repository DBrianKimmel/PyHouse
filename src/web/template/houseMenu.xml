<!--  houseMenu.xml -->
<html 	xmlns:nevow = "http://nevow.com/ns/nevow/0.1"
		xmlns = 'http://www.w3.org/1999/xhtml'
		lang = 'en'>
	<head>
		<title>PyHouse Main Page</title>
		<link rel = 'stylesheet' type = 'text/css' href = 'mainPage.css' />
		<script type = 'text/javascript' src = 'ajax.js' />
	<script type = 'text/javascript' src = 'floatingWindow.js' />
    </head>
    <body>
    	<h1>PyHouse</h1>
    	<h2>Select the item to modify:</h2>
    	<form name = 'menuofbuttons' enctype = 'multipart/form-data' method = 'post' >
    				<nevow:attr name = "action"><nevow:invisible nevow:render = 'action' /></nevow:attr>
    		<table style = 'width: 60%;' border = '0'>
    			<tr>
    				<td><input type = 'submit' value = 'Location' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Rooms' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Lights' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Buttons' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Controllers' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Schedules' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Control_Lights' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Internet' name = 'post_btn' /></td>
    			</tr><tr>
    				<td><input type = 'submit' value = 'Back' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Quit' name = 'post_btn' /></td>
    				<td><input type = 'submit' value = 'Reload' name = 'post_btn' /></td>
    			</tr>
    		</table>
    	</form>
    </body>
</html>

